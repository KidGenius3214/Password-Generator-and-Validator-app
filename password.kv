<MainScreen>:
    name: "main"
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '12dp'
                    #This is the toolbar
                    MDToolbar:
                        title: 'Password Generator and validator'
                        left_action_items: [['menu', lambda x : nav_drawer.toggle_nav_drawer()]]
                        elevation: 10

                    #For text and buttons that will be on the screen   
                    MDLabel:
                        text: "Press Generate to Generate a random Password"
                        font_size: 20
                        theme_text_color: "Custom"
                        text_color: (0.1, 0.3, 0.6)
                        halign: "center"
                        size_hint_y: None
                        font_style: "H5"
                    MDRectangleFlatButton:
                        text: "Generate"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}
                        size_hint: 0.3, 0.6
                        font_size: 25
                        on_release:
                            app.root.current = "Gen"
                            root.manager.transition.direction = "left"

                    MDLabel:
                        text: "Picks a random password from our inbuilt dictionary"
                        font_size: 20
                        theme_text_color: "Custom"
                        text_color: (0.1, 0.3, 0.6)
                        halign: "center"
                        size_hint_y: None
                        font_style: "H5"
                    MDRectangleFlatButton:
                        text: "Dictionary"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}
                        size_hint: 0.3, 0.6
                        font_size: 25
                        on_release:
                            app.root.current = "Dict"
                            root.manager.transition.direction = "left"
                    MDLabel:
                        text: "Validate if your password is strong or not"
                        font_size: 20
                        theme_text_color: "Custom"
                        text_color: (0.1, 0.3, 0.6)
                        halign: "center"
                        size_hint_y: None
                        font_style: "H5"
                    MDRectangleFlatButton:
                        text: "Validate"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}
                        size_hint: 0.3, 0.6
                        font_size: 25
                        on_release:
                            app.root.current =  "validate"
                            root.manager.transition.direction = "left"

                    Widget:

                    
                    
        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"
                Image:
                    source: "Data/Navigate.png"
                    size_hint_y: None
                    height: self.texture_size[1]

                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: "Your Passwords"
                            on_release:
                                app.root.current = "passwds"
                            IconLeftWidget:
                                icon: "file" 
                                
                        OneLineIconListItem:
                            text: "About The Dev"
                            on_release:
                                app.root.current = "About_dev"
                            IconLeftWidget:
                                icon: "android"

                        OneLineIconListItem:
                            text: "Follow me on Instagram"
                            on_release: app.open("Instagram")
                            IconLeftWidget:
                                icon: "instagram"

                        OneLineIconListItem:
                            text: "Subscribe to my Youtube "
                            on_release: app.open("Youtube")
                            IconLeftWidget:
                                icon: "youtube"

                        OneLineIconListItem:
                            text: "Make a Donation"
                            on_release: app.open("Paypal")
                            IconLeftWidget:
                                icon: "paypal"

                        OneLineIconListItem:
                            text: "Licensing"
                            on_release: 
                                app.root.current = "legal"
                            IconLeftWidget:
                                icon: "notebook"

                        OneLineIconListItem:
                            text: "About this app"
                            on_release:
                                app.root.current = "About"
                            IconLeftWidget:
                                icon: "android"
