<Password_Screen>:
    name: "passwds"

    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        MDToolbar:
            title: "Your passwords"
            left_action_items: [["arrow-left", lambda x : app.Main_screen()]]
            text_color: (0.1, 0.3, 0.6)
            elevation: 10

        MDLabel:
            text: "All your passwords are shown here"
            halign: "center"
            theme_text_color: "Custom"
            text_color: (0.1, 0.3, 0.6)
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "Click the button to View all your passwords"
            halign: "center"
            theme_text_color: "Custom"
            text_color: (0.1, 0.3, 0.6)
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint: 0.3, 0.0001

        FloatLayout:
            size_hint_y: None
            height: 10
            MDRectangleFlatButton:
                text: "View Generated Passwords"
                font_size: 12
                size_hint: 0.323, None
                size_hint_y: None
                height: 30
                pos_hint: {"top": 1}
                on_release:
                    root.Gen_list()
                    
            MDRectangleFlatButton:
                text: "View Validated Passwords"
                font_size: 12
                size_hint: 0.323, None
                size_hint_y: None
                height: 30
                pos_hint: {"center_x": 0.5, "top": 1}
                on_release: root.Val_list()

            MDRectangleFlatButton:
                text: "View Dictionary Passwords"
                font_size: 12
                size_hint: 0.323, None
                size_hint_y: None
                height: 30
                pos_hint: {"center_x": 0.833, "top": 1}
                on_release: root.Dict_list()

                
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                MDList:
                    id: Passwd_list


<passwd_not_strong>:
    GridLayout:
        cols:1
        Label:
            text: "* Your password is not strong enough"
        
    

<passwd_valid>:
    GridLayout:
        cols:1
        Label:
            text: "* Your password is valid"
            

<Val_help>:
    Label:
        text: str(root.c)


<Gen_passwd>:
    passwd1: passwd

    Label:
        text: "* Please copy the password that has been provided for you"
        font_size: 13
        
    Label:
        id: passwd
        text: str(root.password())

<Second_dict>:
    second: Second
    Label:
        id: Second
        text: str(root.B)

<Dict_pop>:
    dict_passwd1: Dict_passwd


    Label:
        text: str(root.b)
        font_size: 12
        pos_hint: {"x": 0.35, "top": 1}

    TextInput:
        id: Dict_passwd
        multiline: False
        size_hint: 0.6, 0.26
        text: str(root.A)

    Button:
        text: "Change"
        size_hint: 0.3, 0.3
        font_size: 15
        on_release:
            root.pressed_change()
    
    Button:
        text: "Keep"
        size_hint: 0.3, 0.3
        font_size: 15
        on_release:
            root.pressed_keep()
                




